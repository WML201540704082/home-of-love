  justify-content: center;
}
.top_middle{
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
}
.middle_top{
  font-size: 38rpx;
  font-weight: bold;
}
.middle_bottom{
  margin-top: 30rpx;
