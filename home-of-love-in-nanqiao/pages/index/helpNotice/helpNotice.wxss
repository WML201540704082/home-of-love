.helpNotice{
  padding: 0 30rpx 170rpx;
}
.helpNotice_item{
  margin-top: 30rpx;
  width: 100%;
  height: 330rpx;
  background-color: rgb(221, 220, 220);
  border-radius: 20rpx;
}
.item_top{
  height: 220rpx;
  display: flex;
}
.top_left{
  width: 20%;
